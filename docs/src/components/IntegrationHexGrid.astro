const randomizedIcons = icons.sort(() => Math.random() - 0.5);
---

<div class="hex-grid">
  {
    randomizedIcons.map(
      (icon: { meta: ImageMetadata; alt: string }, i: number) => (
        <a href="/aspire/integrations/gallery" class="img" title={`icon-${i || 0}`}>
          <img src={icon.meta.src} alt={icon.alt} />
        </a>
      ),
    )
  }
</div>

<style>
  .hex-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
    padding: 2rem;
  }

  .img {
    width: 8rem;
    height: 8rem; /* Add this line */
    display: flex; /* Add these lines to center the image */
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
    background: var(--sl-color-backdrop-overlay);
    border-radius: 0.5rem;
    transition:
      transform 0.3s ease,
      filter 0.3s ease;
    overflow: hidden;
    margin-top: 0 !important;
  }

  .img img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .img:hover {
    cursor: pointer;
    transform: scale(1.1);
    filter: brightness(1.2);
    z-index: 1;
  }
</style>
