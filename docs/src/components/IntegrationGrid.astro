---

<div class="layout-grid">
  {
    randomizedIcons.map(
      (icon: { meta: ImageMetadata; alt: string; search: string }, i: number) => (
        <a href={`/aspire/integrations/gallery?search=${encodeURIComponent(icon.search)}`} class="img" title={icon.alt}>
          <img src={icon.meta.src} alt={icon.alt} title={icon.alt} />
        </a>
      ),
    )
  }
</div>

<style>
  .layout-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
    padding: 2rem;
  }

  .img {
    width: 7rem;
    height: 7rem; /* Add this line */
    display: flex; /* Add these lines to center the image */
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
    background: var(--sl-color-bg);
    border: none;
    border-radius: 0.5rem;
    transition:
      transform 0.3s ease,
      filter 0.3s ease;
    overflow: hidden;
    margin-top: initial;
  }

  .img img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .img:hover {
    cursor: pointer;
    transform: scale(1.1);
    filter: brightness(1.2);
    border: 1px solid var(--sl-color-gray-5);
    z-index: 1;
  }
</style>
